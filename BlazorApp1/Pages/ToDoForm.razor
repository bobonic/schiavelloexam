@page "/todo/add"
@page "/todo/edit/{id:int}"

@inject NavigationManager NavigationManager

<h1>@Title To Do</h1>
<hr />

<EditForm Model="@toDoItem" OnValidSubmit="SaveToDoItem">
    <DataAnnotationsValidator />

    <div class="mb-3">
        <label for="Date" class="form-label">Date</label>
        <div class="col-md-4">
            <InputDate class="form-control" @bind-Value="toDoItem.ToDoDate" />
        </div>
        <ValidationMessage For="@(() => toDoItem.ToDoDate)" />
    </div>

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="toDoItem.Title" />
        </div>
        <ValidationMessage For="@(() => toDoItem.Title)" />
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>